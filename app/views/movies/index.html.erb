<div class="container offset-2">
  <div class="row col-10">
    <div>
      <table class="table table-hover">
        <thead class="text-center">
          <tr >
            <th>No</th>
            <th>Title</th>
            <th>Description</th>
            <th>Image</th>
          </tr>
        </thead>
        <tbody>
          <% @movies.each_with_index do |movie, index| %>
            <tr>
              <td class="text-center"><%= index +1 %></td>
              <td><%= link_to movie.title, movie_path(movie) %></td>
              <td><%= movie.description.truncate(150, separator: ' ') %></td>
              <td><img src=<%= "https://image.tmdb.org/t/p/w500#{movie.backdrop_path}" %> alt="<%=movie.title%>"></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
